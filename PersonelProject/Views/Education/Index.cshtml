@using PersonelProject.Models
@model List<TblEducation>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Deneyim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Süre</th>
        <th>Detay</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.EducationID</td>
            <td>@item.EducationTitle</td>
            <td>@item.EduationDate</td>
            <td>@item.EducationDescription</td>
            <td><a href="/Education/DeleteEducation/@item.EducationID" class="btn btn-danger">SİL</a></td>
            <td><a href="/Education/EditEducation/@item.EducationID" class="btn btn-success">GÜNCELLE</a></td>

        </tr>
    }
</table>

<a href="/Education/AddEducation/" class="btn btn-primary">Yeni Eğitim Ekle</a>


