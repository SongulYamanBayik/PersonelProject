@model PersonelProject.Models.TblTestimonial
@{
    ViewBag.Title = "EditeTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Referans Düzenleme Sayfası</h2>
<form method="post">
    <label>Referans ID</label>
    @Html.TextBoxFor(x => x.TestimonialID, new { @class = "form-control" })
    <br />

    <label>Adı</label>
    @Html.TextBoxFor(x => x.TestimonialName, new { @class = "form-control" })
    <br />
    <label>Fotoğraf</label>
    @Html.TextBoxFor(x => x.TestimonialImage, new { @class = "form-control" })
    <br />

    <label>Ünvan</label>
    @Html.TextBoxFor(x => x.TestimonialTitle, new { @class = "form-control" })
    <br />
    <label>Detay</label>
    @Html.TextBoxFor(x => x.TestimonialDescription, new { @class = "form-control" })
    <br />
    <button class="btn btn-primary">Referans Güncelle</button>
</form>

