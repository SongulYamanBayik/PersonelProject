
@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Yeni Referans Ekleme Sayfası</h2>
<form method="post">
    <label>Referans Adı</label>
    <input type="text" class="form-control" name="TestimonialName" required />
    <br />
    <label>Fotoğraf</label>
    <input type="text" class="form-control" name="TestimonialImage" required />
    <br />
    <label>Ünvan</label>
    <input type="text" class="form-control" name="TestimonialTitle" required />
    <br />
    <label>Detay</label>
    <input type="text" class="form-control" name="TestimonialDescription" required />
    <br />
    <button class="btn btn-info">Referans Ekle</button>

</form>